<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anupamparihar.birthday.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/fl"
        android:src="@drawable/flame"


        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/cl"
        android:src="@drawable/candle"


        android:layout_below="@+id/fl"
        android:layout_alignRight="@+id/btn"
        android:layout_alignEnd="@+id/btn" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/hbd"
        android:id="@+id/hb"
        android:layout_alignTop="@+id/fl"
        android:layout_toRightOf="@+id/cl"
        android:layout_toEndOf="@+id/cl"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/ck"
        android:src="@drawable/cake"
        android:layout_marginBottom="19dp"
        android:layout_alignBottom="@+id/btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Burn the candle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
